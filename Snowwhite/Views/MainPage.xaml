<Page
    x:Class="Snowwhite.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="16,16,16,16">
        <ProgressRing x:Name="pb" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="100" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" IsActive="True"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Mirror mirror on the wall..." VerticalAlignment="Top" RelativePanel.Below="pb" RelativePanel.AlignHorizontalCenterWithPanel="True" FontSize="36" FontFamily="Edwardian Script ITC"/>

    </RelativePanel>
</Page>

